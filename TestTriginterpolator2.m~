function [err] = TestTriginterpolator2(R,N,Neval,ff)
%[err] = TestTriginterpolator2(R,N,Neval,@(x,y)sin(2*x+3*y) + cos(x+y));
%[err] = TestTriginterpolator2(R,N,Neval,@(x,y)x.^5-3*y.^4+2*(x-y)+5);
n = (N-1)/2;
l = linspace(0,2*n,2*n+1);
theta = l*2*pi/(2*n+1);
x = R*cos(theta);
y = R*sin(theta);
z = ff(x,y);
%theta_eval = linspace(0,2*pi,Neval)';
theta_eval = 2*pi
xeval = R*cos(theta_eval);
yeval = R*sin(theta_eval);
zexact = ff(xeval,yeval);
zeval = Triginterpolator2(theta_eval,theta,z);
figure
hold on
plot3(xeval,yeval,zexact);
scatter3(xeval,yeval,real(zeval));
err = abs(real(zeval)-zexact);
figure
plot3(xeval,real(yeval),err);
figure 
plot(theta_eval,err);
end